[Unit]
Description=Student Results Dashboard Flask App
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/student-dashboard
Environment=PATH=/opt/student-dashboard/venv/bin
ExecStart=/opt/student-dashboard/venv/bin/gunicorn --workers 3 --bind 0.0.0.0:5000 wsgi:app
Restart=always

[Install]
WantedBy=multi-user.target